<table class='ransack favorite table table-hover table-inverse w-85'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @books.present? %>
      <% books.each do |book| %>
        <tr>
          <td style="width: 5%;"><%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
          </td>
          <td style="width: 5%;"><%= link_to book.title,book, class: "book_#{book.id}" %></td>
          <td style="width: 15%;"><%= book.body %></td>
          <td style="width: 5%;">
            <% if book.tag_list.any? %>
              <% book.tag_list.each do |tag| %>
                <span class="badge badge-primary mr-1 p-2"><%= tag %></span>
              <% end %>
            <% end %>
          </td>
          <td class=<%= "favorite-" + book.id.to_s %> style="width: 15%;">
              <%= render "favorites/btn", book: book %>
          </td>
          <td style="width: 10%;"><%= render "book_comments/counter", book: book %></td>
          <td style="width: 10%;">閲覧数：<%= book.views_count %></td>
          <td style="width: 20%;"><%= render "books/output_star", book: book %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="7"><p>該当する本は見つかりませんでした。</p></td>
      </tr>
    <% end %>
  </tbody>
</table>
